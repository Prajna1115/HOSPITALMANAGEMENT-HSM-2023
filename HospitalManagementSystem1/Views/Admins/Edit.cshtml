@model MyClassLibrary.Models.Admin

@{
    ViewBag.Title = "Edit";
}




<div class="row">
    <div class="col-md-6 col-md-offset-3">

        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2>Edit</h2>
                <h4>admin</h4>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Edit", "Admins", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">


                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                       

                        <div class="form-group">
                            @Html.LabelFor(model => model.AdminName, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.AdminName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.AdminName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.AdminAge, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.AdminAge, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.AdminAge, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.AdminMobile, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.AdminMobile, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.AdminMobile, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.AdminAddress, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.AdminAddress, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.AdminAddress, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.AdminGender, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-6">
                                @Html.EnumDropDownListFor(model => model.AdminGender, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.AdminGender, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.AdminImagePath, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-6">
                                <input type="file" name="file" />
                            </div>
                        </div>



                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-6">
                                <input type="submit" value="Edit" class="btn btn-success" />
                            </div>
                        </div>
                    </div>
                }


            </div>


            <div class="panel-footer">
                @Html.ActionLink("Back to My Details", "Index", new { }, new { @class = "btn btn-primary" })

            </div>
        </div>

    </div>
</div>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
