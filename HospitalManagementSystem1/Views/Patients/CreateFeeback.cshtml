@model MyClassLibrary.Models.Feedback

@{
    ViewBag.Title = "CreateFeeback";
}





<div class="row">
    <div class="col-md-8 col-md-offset-2">

        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2>Create Feeback</h2 >
            </div>
            <div class="panel-body">


                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                       
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <input type="hidden" name="ClickedAppointmentId" value=@ViewBag.ClickedAppointmentId />

                        <div class="form-group">
                            @Html.LabelFor(model => model.FeedbackDesc, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.FeedbackDesc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FeedbackDesc, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.FeedbackRating, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">


                                <div class="radio">
                                    <label style="display: flex;align-items: center;" class="form-check-label">
                                        @Html.RadioButtonFor(model => model.FeedbackRating, "1")
                                        <img src="~/Images/1star.png" width="75" alt="rating img" />
                                    </label>
                                </div>

                                <div class="radio">
                                    <label style="display: flex;align-items: center;" class="form-check-label">
                                        @Html.RadioButtonFor(model => model.FeedbackRating, "2")
                                        <img src="~/Images/2star.png" width="75" alt="rating img" />
                                    </label>
                                </div>

                                <div class="radio">
                                    <label style="display: flex;align-items: center;" class="form-check-label">
                                        @Html.RadioButtonFor(model => model.FeedbackRating, "3")
                                        <img src="~/Images/3star.png" width="75" alt="rating img" />
                                    </label>
                                </div> 
                                <div class="radio">
                                    <label style="display: flex;align-items: center;" class="form-check-label">
                                        @Html.RadioButtonFor(model => model.FeedbackRating, "4")
                                        <img src="~/Images/4star.png" width="75" alt="rating img" />
                                    </label>
                                </div>
                                <div class="radio">
                                    <label style="display: flex;align-items: center;" class="form-check-label">
                                        @Html.RadioButtonFor(model => model.FeedbackRating, "5")
                                        <img src="~/Images/5star.png" width="75" alt="rating img" />
                                    </label>
                                </div>

                                @Html.ValidationMessageFor(model => model.FeedbackRating, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-success" />
                            </div>
                        </div>
                    </div>
                }



            </div>
            <div class="panel-footer">
                <p>
                    @Html.ActionLink("To View Appointments", "ViewAppointments", new {@class="btn btn-primary"})
                </p>
            </div>
        </div>


    </div>

</div>







@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
