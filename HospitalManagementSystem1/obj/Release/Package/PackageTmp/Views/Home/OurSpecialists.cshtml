@model IEnumerable<MyClassLibrary.Models.Doctor>


<img width="80" src="~/Images/DoctorIcon.png" />
<h2 style="margin: 7rem 0; margin-top:3rem; color: #6c5ce7" >Our Specialists</h2>

<div class="row">

    <div class="doctors-Container">

        @foreach (var item in Model)
        {

            <div class="doctor-box">
               
                <div class="img-div">
                    <img src="@Url.Content(item.DoctorImagePath)" alt="DoctorImg" />
                   @* <img src="~/Images/nipun (2).jpg" />*@
                </div>

                <p>@item.dptid.DepartmentName<p>
                <p>@item.DoctorName</p>
                <p>@item.DoctorAge</p>
                <p>@item.DoctorDaysAvailable</p>
                <p>@item.DoctorAvailableSlots</p>
            </div>

        }



    </div>


</div>










